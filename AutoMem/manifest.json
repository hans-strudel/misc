{
  "name": "AutoMeme",
  "description": "Creamifies your Text",
  "version": "2.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.reddit.com/r/programming"],
	  "js": ["automeme.js"]
	}
  ],
  "browser_action": {
    "default_title": "AutoMeme v1"
  },
  "manifest_version": 2
}
